@model IEnumerable<ELF.Models.DonThuGom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    int maDVTG = int.Parse(TempData["maDVTG"].ToString());
    string keyword = "";
    if (TempData["keyword"] != null)
    {
        keyword = TempData["keyword"].ToString();
    }
}

<div class="usr-pnl">
    <div class="pnl-tl">
        <h4>Đơn Thu Gom</h4>

        <a href="#" title="" class="scrh-grp-btn"><i class="fa fa-plus"></i></a>
    </div><!-- Panel Title -->
    <div class="pnl-bdy">
        <div class="blog-sec right-pading" style="padding: 40px 40px 45px; ">
            <div class="post-filter-sec">
                <form method="post" class="filter-form">
                    @using (Html.BeginForm("Index", "DonThuGoms", FormMethod.Get))
                    {
                        @Html.Hidden("maDVTG", maDVTG)
                        <input type="search" placeholder="Tìm kiếm" aria-label="Search" aria-describedby="search-addon" name="keyword">
                        <button><i class="ti-search"></i></button>
                    }
                </form>
            </div>
            <div class="frnds">
                <ul class="nav nav-tabs">
                    <li class="nav-item"><a class="active" href="#frends" data-toggle="tab">Gửi Yêu Cầu</a>
                    <li class="nav-item"><a class="" href="#frends-req" data-toggle="tab">Đã Xác Nhận</a>
                    <li class="nav-item"><a class="" href="#frends-req1" data-toggle="tab">Hoàn Tất</a>
                    <li class="nav-item"><a class="" href="#frends-req2" data-toggle="tab">Đã Hủy</a>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active fade show " id="frends">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Gửi yêu cầu", keyword = keyword })
                        <div class="lodmore"><button class="btn-view btn-load-more"></button></div>
                    </div>
                    <div class="tab-pane fade" id="frends-req">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Đã xác nhận", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>

                    <div class="tab-pane fade" id="frends-req1">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Hoàn tất", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>
                    <div class="tab-pane fade" id="frends-req2">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Đã hủy", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
