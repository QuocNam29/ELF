@model IEnumerable<ELF.Models.DonThuGom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    int maDVTG = int.Parse(TempData["maDVTG"].ToString());
    string keyword = "";
    if (TempData["keyword"] != null)
    {
        keyword = TempData["keyword"].ToString();
    }
}

<div class="usr-pnl">
    <div class="pnl-tl">
        <h4>Đơn Thu Gom</h4>

        <a href="#" title="" class="scrh-grp-btn"><i class="fa fa-plus"></i></a>
    </div><!-- Panel Title -->
    <div class="pnl-bdy">
        <div class="blog-sec right-pading" style="padding: 40px 40px 45px; ">
            <div class="post-filter-sec">
                <form method="post" class="filter-form">
                    @using (Html.BeginForm("Index", "DonThuGoms", FormMethod.Get))
                    {
                        @Html.Hidden("maDVTG", maDVTG)
                        <input type="search" placeholder="Tìm kiếm" aria-label="Search" aria-describedby="search-addon" name="keyword">
                        <button><i class="ti-search"></i></button>
                    }
                </form>
            </div>
            <div class="frnds">
                <ul class="nav nav-tabs">
                    <li class="nav-item"><a class="active" href="#frends" data-toggle="tab">Gửi Yêu Cầu</a>
                    <li class="nav-item"><a class="" href="#frends-req" data-toggle="tab">Đã Xác Nhận</a>
                    <li class="nav-item"><a class="" href="#frends-req1" data-toggle="tab">Hoàn Tất</a>
                    <li class="nav-item"><a class="" href="#frends-req2" data-toggle="tab">Đã Hủy</a>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active fade show " id="frends">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Gửi yêu cầu", keyword = keyword })
                        <div class="lodmore"><button class="btn-view btn-load-more"></button></div>
                    </div>
                    <div class="tab-pane fade" id="frends-req">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Đã xác nhận", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>

                    <div class="tab-pane fade" id="frends-req1">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Hoàn tất", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>
                    <div class="tab-pane fade" id="frends-req2">
                        @Html.Action("list_DTG", "DonThuGoms", new { maDVTG = maDVTG, trangThai = "Đã hủy", keyword = keyword })
                        <button class="btn-view btn-load-more"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="popup-wrp2 srch-grp-pp">
    <span class="pp-cls"></span>
    <div class="popup-innr loc-edt" style="max-width: 1040px;">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 500px;">
            <div class="scrl" style="overflow: hidden; width: auto; height: 500px;">
                <div class="usr-pnl">
                    <div class="pnl-tl">
                        <h4>Thêm Đơn Thu Gom </h4>
                        <ul class="brd-crmb">
                            <li><a href="#" title=""><i class="fa fa-home"></i></a></li>
                            <li>Locations</li>
                        </ul>
                    </div><!-- Panel Title -->
                    <div class="pnl-bdy">

                        <div class="adrs-frm">
                            <h4>Thông Tin Đơn Thu Gom</h4>
                            @using (Html.BeginForm("Create", "DonThuGoms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("maDVTG", maDVTG)
                                <form>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <input type="text" placeholder="Thành phần rác thải" name="thanhPhan"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập thành phần rác thải)" oninput="setCustomValidity('')">
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" placeholder="Khối lượng" name="khoiLuong"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập khối lượng rác thải)" oninput="setCustomValidity('')">
                                                </div>

                                                <div class="col-md-12">
                                                    <input type="Text" placeholder="Vị trí thu gom" name="viTri"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập vị trí thu gom)" oninput="setCustomValidity('')">
                                                </div>
                                                <div class="col-md-12">
                                                    <a href="#">Ngày hẹn thu gom</a>
                                                    <input type="datetime-local" placeholder="Ngày hẹn thu gom" name="ngayHenTG"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập loại thu gom)" oninput="setCustomValidity('')">
                                                </div>
                                               
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <textarea placeholder="Ghi chú" name="ghiChu"></textarea>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <button type="submit" title="" class="sv-btn">Lưu</button>
                                </form>
                            }
                        </div><!-- Address Form -->
                    </div><!-- Panel Body -->
                </div><!-- User panel -->
            </div>
        </div>
    </div>
</div>