@model ELF.Models.DonViThuGom

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="usr-pnl">
    <div class="pnl-tl">
        <h4>Dơn vị thu gom</h4>

        <a href="#" title="" class="scrh-grp-btn"><i class="fa fa-plus"></i></a>
    </div><!-- Panel Title -->
    <div class="pnl-bdy" style="padding: 40px 40px 45px; text-align: center; ">
        <div class="editing-info">
            <h5 class="f-title"><i class="ti-info-alt"></i>Thông tin loại quyên góp</h5>
            <div class="form-group">
                <img width="300" src="~/images/resources/@Model.logo" alt="">
            </div>
        </div>

        <div class="onoff-options">
            <div class="setting-row">
                <span>Tên Đơn Vị Thu Gom</span>
                <p>@Html.DisplayFor(model => model.tenDVTG)</p>
            </div>

            <div class="setting-row">
                <span>Số điện thoại liên hệ</span>
                <p>@Html.DisplayFor(model => model.soDienThoai)</p>
            </div>

            <div class="setting-row">
                <span>Địa chỉ</span>
                <p>@Html.DisplayFor(model => model.diaChi)</p>
            </div>

            <div class="setting-row">
                <span>Loại Thu Gom</span>
                <p>@Html.DisplayFor(model => model.loaiThuGom)</p>
            </div>

            <div class="setting-row">
                <span>Hình thức thu gom</span>
                <p>@Html.DisplayFor(model => model.hinhThucThuGom)</p>
            </div>

            <div class="submit-btns" style="text-align: right;">
                <button type="button" class="mtr-btn" onclick="location.href='@Url.Action("Index", "DonViThuGoms")'"><span>Quay lại</span></button>
                <button type="button" class="scrh-grp-btn mtr-btn" style="width: auto"><span>Chỉnh sửa</span></button>

            </div>
        </div>
    </div>
</div>

<div class="popup-wrp2 srch-grp-pp">
    <span class="pp-cls"></span>
    <div class="popup-innr loc-edt" style="max-width: 1040px;">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 500px;">
            <div class="scrl" style="overflow: hidden; width: auto; height: 500px;">
                <div class="usr-pnl">
                    <div class="pnl-tl">
                        <h4>Thêm loại quyên góp</h4>
                        <ul class="brd-crmb">
                            <li><a href="#" title=""><i class="fa fa-home"></i></a></li>
                            <li>Locations</li>
                        </ul>
                    </div><!-- Panel Title -->
                    <div class="pnl-bdy">

                        <div class="adrs-frm">
                            <h4>Thông tin quyên góp</h4>
                            @using (Html.BeginForm("Edit", "DonViThuGoms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", Model.maDVTG)
                        <form>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Tên Đơn Vị Thu Gom" value="@Model.tenDVTG" name="TenDVTG"
                                                   required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập tên đơn vị thu gom)" oninput="setCustomValidity('')">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" placeholder="Số điện thoại liên hệ" value="@Model.soDienThoai" name="sdt"
                                                   required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập số điện thoại liên hệ)" oninput="setCustomValidity('')">
                                        </div>

                                        <div class="col-md-12">
                                            <input type="Text" placeholder="Địa Chỉ" name="diaChi" value="@Model.diaChi"
                                                   required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập địa chỉ)" oninput="setCustomValidity('')">
                                        </div>
                                        <div class="col-md-12">
                                            <input type="text" placeholder="Loại Thu Gom" name="LoaiTG" value="@Model.loaiThuGom"
                                                   required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập loại thu gom)" oninput="setCustomValidity('')">
                                        </div>
                                        <div class="col-md-12">
                                            <input type="text" placeholder="Hình Thức Thu Gom" name="hinhThucTG" value="@Model.hinhThucThuGom"
                                                   required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập hình thức thu gom)" oninput="setCustomValidity('')">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="cmp-bnr">
                                                <label class="fileContainer">
                                                    <i class="fa fa-camera" style="line-height: 128px;"></i>
                                                    <input accept="image/*" id="chng2" type="file" name="img" />
                                                           
                                                    <script>
                                                        chng2.onchange = evt => {
                                                            const [file] = chng2.files
                                                            if (file) {
                                                                blah.src = URL.createObjectURL(file)
                                                            }
                                                        }
                                                    </script>
                                                </label>
                                                <img id="utp2" src="~/images/resources/@Model.logo" alt="" />
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <button type="submit" title="" class="sv-btn">Lưu</button>
                        </form>
                            }
                        </div><!-- Address Form -->
                    </div><!-- Panel Body -->
                </div><!-- User panel -->
            </div>
        </div>
    </div>
</div>
