@model ELF.Models.LoaiQuyenGop

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="usr-pnl">
    <div class="pnl-tl">
        <h4>Loại quên góp</h4>

        <a href="#" title="" class="scrh-grp-btn"><i class="fa fa-plus"></i></a>
    </div><!-- Panel Title -->
    <div class="pnl-bdy" style="padding: 40px 40px 45px; text-align: center; ">
        <div class="editing-info">
            <h5 class="f-title"><i class="ti-info-alt"></i>Thông tin loại quyên góp</h5>
            <div class="form-group">
                <img width="300" src="~/images/resources/@Model.hinhAnh" alt="">
            </div>
        </div>

        <div class="onoff-options">
            <div class="setting-row">
                <span>Tên loại quyên góp</span>
                <p>@Html.DisplayFor(model => model.tenLoai)</p>
            </div>

            <div class="setting-row">
                <span>Vật dụng ví dụ</span>
                <p>@Html.DisplayFor(model => model.noiDung)</p>
            </div>

            <div class="setting-row">
                <span>Vị trí</span>
                <p>@Html.DisplayFor(model => model.viTriQP)</p>
            </div>

            <div class="setting-row">
                <span>Ghi chú</span>
                <p>@Html.DisplayFor(model => model.ghiChu)</p>
            </div>
            <div class="submit-btns" style="text-align: right;" >
                <button type="button" class="mtr-btn" onclick="location.href='@Url.Action("Index", "LoaiQuyenGops")'"><span>Quay lại</span></button>
                <button type="button" class="scrh-grp-btn mtr-btn" style="width: auto"><span>Chỉnh sửa</span></button>

            </div>
        </div>
</div>
    </div>

<div class="popup-wrp2 srch-grp-pp">
    <span class="pp-cls"></span>
    <div class="popup-innr loc-edt" style="max-width: 1040px;">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 500px;">
            <div class="scrl" style="overflow: hidden; width: auto; height: 500px;">
                <div class="usr-pnl">
                    <div class="pnl-tl">
                        <h4>Thêm loại quyên góp</h4>
                        <ul class="brd-crmb">
                            <li><a href="#" title=""><i class="fa fa-home"></i></a></li>
                            <li>Locations</li>
                        </ul>
                    </div><!-- Panel Title -->
                    <div class="pnl-bdy">

                        <div class="adrs-frm">
                            <h4>Thông tin quyên góp</h4>
                            @using (Html.BeginForm("Edit", "LoaiQuyenGops", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", Model.maLQG)
                                <form>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="text" placeholder="Tên Loại Quyên Góp" value="@Model.tenLoai" name="loaiQG"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập tên loại quên góp)" oninput="setCustomValidity('')">
                                                </div>
                                                <div class="col-md-12">
                                                    <input type="Text" placeholder="vật dụng ví dụ..." value="@Model.noiDung" name="noidung"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập những vât dụng ví dụ...)" oninput="setCustomValidity('')">
                                                </div>
                                                <div class="col-md-12">
                                                    <input type="text" placeholder="Vị trí quyên góp" value="@Model.viTriQP" name="vitri"
                                                           required="required" oninvalid="this.setCustomValidity('Bạn chưa nhập vị trí quyên góp)" oninput="setCustomValidity('')">
                                                </div>
                                                @if (Model.ghiChu != null)
                                                {
                                                    <div class="col-md-12">
                                                        <input type="text" placeholder="Ghi chú" value="@Model.ghiChu" name="ghiChu">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-md-12">
                                                        <input type="text" placeholder="Ghi chú" name="ghiChu">
                                                    </div>
                                                }

                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="cmp-bnr">
                                                        <label class="fileContainer">
                                                            <i class="fa fa-camera" style="line-height: 128px;"></i>
                                                            <input accept="image/*" id="chng2" type="file" name="img">

                                                            <script>
                                                                chng2.onchange = evt => {
                                                                    const [file] = chng2.files
                                                                    if (file) {
                                                                        blah.src = URL.createObjectURL(file)
                                                                    }
                                                                }
                                                            </script>
                                                        </label>
                                                        <img id="utp2" src="~/images/resources/@Model.hinhAnh" alt="">
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <button type="submit" title="" class="sv-btn">Lưu</button>
                                </form>
                            }
                        </div><!-- Address Form -->
                    </div><!-- Panel Body -->
                </div><!-- User panel -->
            </div>
        </div>
    </div>
</div>
