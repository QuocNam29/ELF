@model List<ELF.Models.QuaTang>


<div class="purify">
    @using (Html.BeginForm("Index", "KD_DonQuas", FormMethod.Get))
    {
        <span><b>Loại quà tặng:</b> </span>

        <select name="maQT">
            <option>Tất cả</option>
            @foreach (var item in Model)
            {
                if (TempData["tenQuaTang"] != null)
                {
                    if (TempData["tenQuaTang"].ToString() == item.tenQuaTang)
                    {
                        <option selected="selected" value="@item.maQuaTang">@item.tenQuaTang</option>
                    }
                    else
                    {
                        <option value="@item.maQuaTang">@item.tenQuaTang</option>
                    }
                }
                else
                {
                    <option value="@item.maQuaTang">@item.tenQuaTang</option>
                }
                

            }
        </select>

        <button style="
    color: #fff;
    display: inline-block;
    font-size: 12px;
    letter-spacing: 1px;
    line-height: initial;
    padding: 15px 20px;
    text-transform: capitalize;  ">
            Lọc
        </button>
    }
</div>