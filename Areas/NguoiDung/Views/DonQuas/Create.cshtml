                    })
                    @Html.ValidationMessageFor(model => model.MaQT, "", new { @class = "text-danger" })
                    <label class="control-label" for="input">Số lượng *</label><i class="mtrl-select"></i>
                </div>


                <div class="submit-btns">
                    <button type="button" onclick="location.href='@Url.Action("Index", "QuaTangs")'" class="mtr-btn"><span>Huỷ</span></button>
                    <button type="submit" class="mtr-btn"><span>Đăng ký</span></button>
                </div>
            </form>
        </div>
    </div>
