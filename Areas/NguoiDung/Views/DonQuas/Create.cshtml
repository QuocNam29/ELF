            <label class="control-label" for="input">Đồ quyên góp *</label><i class="mtrl-select"></i>
        </div>*@
                <div class="form-group">
                    @Html.EditorFor(model => model.MaQT, new
                    {
                        htmlAttributes = new
                        {
                            @type = "number",
                            @required = "",
                            @oninvalid = "this.setCustomValidity('Bạn chưa nhập số lượng')",
                            @oninput = "setCustomValidity('')"
