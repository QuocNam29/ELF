@model IEnumerable<ELF.Models.LoaiQuyenGop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NguoiDung/Views/Shared/_Layout_NguoiDung.cshtml";
}


<div class="central-meta">
    <div class="groups">
        <span><i class="fa fa-file-text-o"></i> Các loại quyên góp</span>
    </div>

    <ul class="liked-pages">
        @foreach (var item in Model)
        {
            <li>
                <div class="f-page">
                    <figure>
                        <a href="@Url.Action("Create", "QuyenGops")" title=""><img src="~/images/resources/@item.hinhAnh" alt=""></a>
                        <div class="dropdown pgs">
                            <button class="btn" type="button" id="dropdownMenu" aria-haspopup="true" aria-expanded="false">
                                Quyên góp
                            </button>
                        </div>
                    </figure>
                    <div class="page-infos">
                        <h5><a href="#" title="">@Html.DisplayFor(modelItem => item.tenLoai)</a></h5>
                        <span><a href="#" title="">@Html.DisplayFor(modelItem => item.noiDung)</a></span>
                    </div>
                </div>
            </li>

        }
    </ul>
</div>
