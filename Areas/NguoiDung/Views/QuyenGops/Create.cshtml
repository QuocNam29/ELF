@model ELF.Models.QuyenGop

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/NguoiDung/Views/Shared/_Layout_NguoiDung.cshtml";
    string img = "";
}

<h2>@ViewBag.FileStatus</h2>

@using (Html.BeginForm("Create", "QuyenGops", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="central-meta">
        <div class="editing-info">
            <h5 class="f-title"><i class="ti-info-alt"></i> Đăng ký quyên góp</h5>
            <form method="post">
                <div class="form-group">
                    @Html.DropDownList("maND", null, htmlAttributes: new { @class = "form-control" })
                    @*<input type="text" required="required" value="@Session["hoVaTen"]" />*@
                    <label class="control-label" for="input">Họ và tên</label><i class="mtrl-select"></i>
                    @Html.ValidationMessageFor(model => model.maND, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.ngayQG, new { htmlAttributes = new { @type = "date", @required = "required" } })
                    <label class="control-label" for="input">Ngày quyên góp</label><i class="mtrl-select"></i>
                    @Html.ValidationMessageFor(model => model.ngayQG, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("maLQG", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maLQG, "", new { @class = "text-danger" })
                    <label class="control-label" for="input">Đồ quyên góp</label><i class="mtrl-select"></i>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.soLuong, new { htmlAttributes = new { @type="number", @required="required" } })
                    @Html.ValidationMessageFor(model => model.soLuong, "", new { @class = "text-danger" })
                    <label class="control-label" for="input">Số lượng</label><i class="mtrl-select"></i>
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.donVi,
                 new List<SelectListItem> {
                      new SelectListItem { Value = "Cái" , Text = "Cái" },
                      new SelectListItem { Value = "Viên" , Text = "Viên" },
                      new SelectListItem { Value = "Kg" , Text = "Kg" }
                   },
                 new { @class = "form-control" })
                    <label class="control-label" for="input">Đơn vị</label><i class="mtrl-select"></i>
                </div>
                <div class="form-group">
                    @*<img src="@Url.Content(avt)" alt="">*@
                    <label class="fileContainer">
                        <input accept="image/*" type="file" name="img" id="imgInp"><br>
                        <img id="blah" src="#" width="200" alt="Image preview...">
                        <label class="control-label" for="input">Chọn hình</label>
                        <script>
                            imgInp.onchange = eva => {
                                const [file] = imgInp.files
                                if (file) {
                                    blah.src = URL.createObjectURL(file)
                                }
                            }
                        </script>
                    </label>
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @type = "text", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.ghiChu, "", new { @class = "text-danger" })
                    <label class="control-label" for="textarea">Ghi chú</label><i class="mtrl-select"></i>
                </div>
                            
                <div class="submit-btns">
                    <button type="button" onclick="location.href='@Url.Action("Index", "LoaiQuyenGops")'" class="mtr-btn"><span>Cancel</span></button>
                    <button type="submit" class="mtr-btn"><span>Save</span></button>
                </div>
            </form>
        </div>
    </div>
}

