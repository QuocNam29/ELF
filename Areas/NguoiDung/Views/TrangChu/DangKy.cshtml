            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Đăng bài</h2>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-row">
                            <div class="form-group">
                                <div class="name">Tên sản phẩm</div>
                                <input class="input--style-6" type="text" name="full_name">
                                <div class="name"></div>
                                <div class="name">Loại sản phẩm</div>
                                <input class="input--style-6" type="text" name="full_name">
                            </div>
                            
                            @*<div class="value">
                                <input class="input--style-6" type="text" name="full_name">
                            </div>
                            
                            <div class="value">
                                <input class="input--style-6" type="text" name="full_name">
                            </div>*@

                        </div>

                        <div class="form-row">

                            <div class="form-group">
                                <div class="name">Giá sản phẩm</div>
                                <input class="input--style-6" type="text" name="full_name">
                                <div class="name"></div>
                                <div class="name">Số lượng</div>
                                <input class="input--style-6" type="text" name="full_name">
                            </div>

                            @*<div class="name">Email address</div>
        <div class="value">
            <div class="input-group">
                <input class="input--style-6" type="email" name="email" placeholder="example@email.com">
            </div>
        </div>*@
                        </div>
                        <div class="form-row">
                            <div class="name">Mô tả</div>
                            <div class="value">
                                <div class="input-group">
                                    <textarea class="textarea--style-6" name="message" placeholder="Thêm mô tả"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Upload hình ảnh</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    @*<input class="input-file" type="file" name="file_cv" id="file">*@
                                    <input accept="image/*" type="file" name="img" id="imgInp"><br>
                                    <img id="blah" src="#" width="200" alt="Image preview...">
                                    <script>
                                        imgInp.onchange = evt => {
                                            const [file] = imgInp.files
                                            if (file) {
                                                blah.src = URL.createObjectURL(file)
                                            }
                                        }
                                    </script>
                                    @*<label class="label--file" for="file">Choose file</label>
                                    <span class="input-file__info">No file chosen</span>*@
